        INGREDIENTS_CHECK
        INITIALIZATION
        HANDLING_PROBLEM
    }

    INGREDIENTS_CHECK [label="INGREDIENTS\nCHECK"]
    INGREDIENTS_CHECK -> {
        WAITING_FOR_PAYING
        WAITING
        INITIALIZATION
        HANDLING_PROBLEM
    }

    WAITING_FOR_PAYING [label="WAITING\nFOR PAYING"]
    WAITING_FOR_PAYING -> {
        PAYING
        INITIALIZATION
        HANDLING_PROBLEM
    }

    PAYING
    PAYING -> {
        DELIVERY
        INITIALIZATION
        HANDLING_PROBLEM
    }
